<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.ListadoViajeros" >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarViajerosListado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:menu="@menu/menu_listado_viajeros"
        app:title="Listado Viajeros" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViajeros"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/viajeros_view" />
</LinearLayout>